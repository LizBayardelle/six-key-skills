
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs pt-3">

    <div class="offwhite-card mb-5 row">

      <div class="col-12 text-center">
        <h2>Basic Information</h2>
      </div>

      <div class="col-12 col-sm-10">
        <div class="md-form mb-1">
          <%= f.text_field :name,
                    class: "form-control",
                    id: "name",
                    required: true,
                    label: false %>
          <label for="title">Course Name</label>
        </div> <!-- md-form -->
      </div> <!-- col -->

      <div class="col-12 col-sm-2">
        <div class="md-form mb-1">
          <%= f.text_field :price,
                    class: "form-control",
                    id: "price",
                    required: true,
                    label: false %>
          <label for="title">Price</label>
        </div> <!-- md-form -->
      </div> <!-- col -->

      <div class="col-12 text-left pt-2">
        <label>Course Image</label><br>
        <%= f.file_field :image %>
      </div> <!-- col-12 -->

      <div class="col-12">
        <div class="md-form mb-1">
          <%= f.text_field :teaser,
                    class: "form-control",
                    id: "teaser",
                    required: true,
                    label: false %>
          <label for="title">Teaser</label>
        </div> <!-- md-form -->
      </div> <!-- col -->

      <div class="col-12 pt-3 field text-left">
        <label for="title">Course Description</label>
        <%= f.text_area :description, class: "tinymce", rows: 20, style: "width: 100%" %>
        <%= tinymce :content_css => asset_path('application.css')%>
      </div>

      <div class="col-12 col-sm-6 my-3 field form-check">
        <%= f.check_box :active, class: "form-check-input", id: "active" %>
        <%= f.label :active, class: "form-check-label", for: "active" %>
      </div>

      <div class="col-12 col-sm-6 my-3 field form-check">
        <%= f.check_box :featured, class: "form-check-input", id: "featured" %>
        <%= f.label :featured, class: "form-check-label", for: "featured" %>
      </div>

    </div> <!-- card/row -->



    <div class="offwhite-card pb-5 mb-5 text-left row">

      <div class="col-12 text-center">
        <h2>Categories</h2>
      </div>

      <div class="col-4 col-lg-2 field form-check">
        <%= f.check_box :motivation, class: "form-check-input", id: "motivation" %>
        <%= f.label :motivation, class: "form-check-label", for: "motivation" %>
      </div>

      <div class="col-4 col-lg-2 field form-check">
        <%= f.check_box :mindset, class: "form-check-input", id: "mindset" %>
        <%= f.label :mindset, class: "form-check-label", for: "mindset" %>
      </div>

      <div class="col-4 col-lg-2 field form-check">
        <%= f.check_box :resourcing, class: "form-check-input", id: "resourcing" %>
        <%= f.label :resourcing, class: "form-check-label", for: "resourcing" %>
      </div>

      <div class="col-4 col-lg-2 field form-check">
        <%= f.check_box :planning, class: "form-check-input", id: "planning" %>
        <%= f.label :planning, class: "form-check-label", for: "planning" %>
      </div>

      <div class="col-4 col-lg-2 field form-check">
        <%= f.check_box :time_management, class: "form-check-input", id: "time_management" %>
        <%= f.label :time_management, class: "form-check-label", for: "time_management" %>
      </div>

      <div class="col-4 col-lg-2 field form-check">
        <%= f.check_box :discipline, class: "form-check-input", id: "discipline" %>
        <%= f.label :discipline, class: "form-check-label", for: "discipline" %>
      </div>

    </div> <!-- card/row -->








    <div class="offwhite-card mb-5 text-left row">

      <div class="col-12 text-center">
        <h2>Marketing</h2>
      </div>

      <div class="col-12 col-sm-8">
        <div class="md-form mb-1">
          <%= f.text_field :sp1,
                    class: "form-control",
                    id: "sp1",
                    required: true,
                    label: false %>
          <label for="title">Selling Point 1</label>
        </div> <!-- md-form -->
      </div> <!-- col -->

      <div class="col-12 col-sm-4 pb-3">
        <label>Image</label><br>
        <%= f.file_field :sp1_image %>
      </div> <!-- col-12 -->

      <div class="col-12 col-sm-8">
        <div class="md-form mb-1">
          <%= f.text_field :sp2,
                    class: "form-control",
                    id: "sp2",
                    required: true,
                    label: false %>
          <label for="title">Selling Point 2</label>
        </div> <!-- md-form -->
      </div> <!-- col -->

      <div class="col-12 col-sm-4 pb-3">
        <label>Image</label><br>
        <%= f.file_field :sp2_image %>
      </div> <!-- col-12 -->

      <div class="col-12 col-sm-8">
        <div class="md-form mb-1">
          <%= f.text_field :sp3,
                    class: "form-control",
                    id: "sp3",
                    required: true,
                    label: false %>
          <label for="title">Selling Point 3</label>
        </div> <!-- md-form -->
      </div> <!-- col -->

      <div class="col-12 col-sm-4 pb-3">
        <label>Image</label><br>
        <%= f.file_field :sp3_image %>
      </div> <!-- col-12 -->

      <div class="col-12 pb-3">
        <label>Pins</label><br>
        <%= f.file_field :pins, multiple: true %>
      </div> <!-- col-12 -->

      <div class="col-12">
        <p class="text-left">Pinterest Description</p>
        <%= f.text_area :pinterest_description, style: "width: 100%" %>
      </div>

      <div class="col-12 pt-3 field text-left">
        <label for="title">Reviews</label>
        <%= f.text_area :reviews, class: "tinymce", rows: 20, style: "width: 100%" %>
        <%= tinymce :content_css => asset_path('application.css')%>
      </div>

    </div> <!-- card/row -->


  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Save", class: "btn btn-primary" %>
  </div>

<% end %>







<script>
  $(document).ready(function() {
    tinymce.init({
      selector: "textarea.tinymce",  // change this value according to your HTML
    });
  });
</script>
