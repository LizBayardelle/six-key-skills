<header class="mb-4">
  <p class="text-right mt-2 mr-2">
    <%= link_to 'New Subcategory', new_subcategory_path %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Blogs Manager', admin_blogs_path %>
  </p>

  <h1 class="font-weight-bold text-center">Subcategories</h1>
</header>

<section class="text-center mb-5 my-"> <!-- blogs -->
  <div class="container">  <!-- container -->


      <tbody>
      </tbody>


    <div class="table-responsive" style="width: 100%">
      <table id="dtBasicExample" class="table table-striped table-bordered" width="100%">
        <thead>
          <tr>
            <th>Actions</th>
            <th>Image</th>
            <th>Name</th>
            <th>Active</th>
            <th><i class="fas fa-mountain"></i></th>
            <th><i class="fas fa-brain"></i></th>
            <th><i class="fas fa-first-aid"></i></th>
            <th><i class="fas fa-sitemap"></i></th>
            <th><i class="fas fa-stopwatch"></i></th>
            <th><i class="fas fa-cookie-bite"></i></th>
          </tr>
        </thead>

        <tbody>
          <% @subcategories.each do |subcategory| %>
            <tr>
              <td><%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_subcategory_path(subcategory) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '<i class="fas fa-times"></i>'.html_safe, subcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= image_tag url_for(subcategory.image), style: "height: 20px" %></td>
              <td class="text-left"><%= link_to subcategory.name, subcategory %></td>
              <td><% if subcategory.active %><i class="fas fa-check"></i><% end %></td>
              <td><% if subcategory.motivation %><i class="fas fa-check"></i><% end %></td>
              <td><% if subcategory.mindset %><i class="fas fa-check"></i><% end %></td>
              <td><% if subcategory.resourcing %><i class="fas fa-check"></i><% end %></td>
              <td><% if subcategory.planning %><i class="fas fa-check"></i><% end %></td>
              <td><% if subcategory.time_management %><i class="fas fa-check"></i><% end %></td>
              <td><% if subcategory.discipline %><i class="fas fa-check"></i><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- table responsive -->


  </div> <!-- container -->
</section>









<script>
  $(document).ready(function () {
    $('#dtBasicExample').DataTable();
    $('.dataTables_length').addClass('bs-select');
  });
</script>
