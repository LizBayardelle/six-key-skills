<main>

  <div class="view jarallax" style="height: auto;">

    <img class="jarallax-img" src="https://sixkeyskills.s3-us-west-1.amazonaws.com/stairs.jpg" alt="">

    <div class="mask rgba-white-slight">
      <div class="container flex-center text-center">
        <div class="row mb-5">
          <div class="col-md-12 wow fadeIn mb-3">
            <h1 class="display-3 mb-2 wow fadeInDown text-black font-weight-bold" data-wow-delay="0.3s">The biggest asset your business has is&nbsp;<a class="text-red">you</a>.</h1>
            <h4 class="mb-3 mt-1 font-weight-bold wow fadeIn text-black" data-wow-delay="0.4s">
              Six Key Skills teaches you how to weaponize yourself as&nbsp;human&nbsp;capital.
            </h4>
            <h4 class="mb-3 mt-1 font-weight-bold wow fadeIn text-black" data-wow-delay="0.4s">
              Take the free quiz to see which skills you can build to catapult you towards&nbsp;your&nbsp;goals.
            </h4>
            <%= link_to "Read More", blogs_path, class: "btn color-slate btn-lg wow fadeIn text-white text-white-hover" %>
            <a class="btn color-red btn-lg wow fadeIn text-white text-white-hover" data-wow-delay="0.4s">Take the Quiz</a>
          </div> <!-- col -->
        </div> <!-- row -->
      </div> <!-- container -->
    </div> <!-- mask -->

  </div> <!-- jarallax view -->


  <div class="z-depth-3">
    <div class="container pb-4">

      <div class="row">  <!--Grid row-->
        <div class="col-md-12 wow fadeIn mb-3 text-center pt-5 py-4">
          <h2 class="display-3 mb-2 wow fadeInDown" data-wow-delay="0.3s">What We Do</h2>
          <h4 class="mb-3 mt-1 wow fadeIn" data-wow-delay="0.4s">
            Six Key Skills is a research-driven approach to achievement, based on a framework of six different skills that have significant correlations with achievement&nbsp;and&nbsp;success.
          </h4>
          <h4 class="mb-3 mt-1 wow fadeIn" data-wow-delay="0.4s">
            Our goal is to help you weaponize yourself as an asset by building the six key skills you really&nbsp;need&nbsp;to&nbsp;succeed.
          </h4>
        </div> <!-- col -->
      </div> <!--Grid row-->

    </div> <!-- container -->
  </div> <!-- z depth -->



  <div class="view jarallax" style="height: auto !important">
    <img class="jarallax-img" src="https://sixkeyskills.s3-us-west-1.amazonaws.com/woman-arms-up-ocean.jpg" alt="">
    <div class="container-fluid px-5 py-5">
      <div class="row text-center">

        <div class="col-12">
          <h2 class="display-3 text-white">The Six Key Skills</h2>
        </div>

        <div class="col-sm-6 col-md-4 h-100">
          <%= link_to page_path("motivation") do %>
            <div class="hover-box h-100">
              <i class="h1 mt-4 fas fa-mountain"></i>
              <h3>Motivation</h3>
            </div>
          <% end %>
        </div> <!-- col -->

        <div class="col-sm-6 col-md-4 h-100">
          <%= link_to page_path("mindset") do %>
            <div class="hover-box h-100">
              <i class="h1 mt-4 fas fa-brain"></i>
              <h3>Mindset</h3>
            </div>
          <% end %>
        </div> <!-- col -->

        <div class="col-sm-6 col-md-4 h-100">
          <%= link_to page_path("resourcing") do %>
            <div class="hover-box h-100">
              <i class="h1 mt-4 fas fa-first-aid"></i>
              <h3>Resourcing</h3>
            </div>
          <% end %>
        </div> <!-- col -->

        <div class="col-sm-6 col-md-4 h-100">
          <%= link_to page_path("planning") do %>
            <div class="hover-box h-100">
              <i class="h1 mt-4 fas fa-sitemap"></i>
              <h3>Planning</h3>
            </div>
          <% end %>
        </div> <!-- col -->

        <div class="col-sm-6 col-md-4 h-100">
          <%= link_to page_path("Time Management") do %>
            <div class="hover-box h-100">
              <i class="h1 mt-4 fas fa-stopwatch"></i>
              <h3>Time Management</h3>
            </div>
          <% end %>
        </div> <!-- col -->

        <div class="col-sm-6 col-md-4 h-100">
          <%= link_to page_path("discipline") do %>
            <div class="hover-box h-100">
              <i class="h1 mt-4 fas fa-cookie-bite"></i>
              <h3>Discipline</h3>
            </div>
          <% end %>
        </div> <!-- col -->
      </div> <!-- row -->
    </div> <!-- container -->
  </div> <!-- jarallax -->






    <div class="z-depth-3">
      <div class="container pb-4">

        <div class="row">  <!--Grid row-->
          <div class="col-md-12 wow fadeIn mb-3 text-center pt-5 py-4">
            <h2 class="display-3 mb-2 wow fadeInDown" data-wow-delay="0.3s">Recent Articles</h2>
          </div> <!-- col -->
          <% @blogs.each do |blog| %>
            <%= render partial: "blogs/blogcard", locals: {blog: blog } %>
          <% end %>
        </div> <!--Grid row-->

      </div> <!-- container -->
    </div> <!-- z depth -->


</main>


<script>
  $(document).ready(function() {
    // object-fit polyfill run
    objectFitImages();

    /* init Jarallax */
    jarallax(document.querySelectorAll('.jarallax'));

    jarallax(document.querySelectorAll('.jarallax-keep-img'), {
        keepImg: true,
    });
  });
</script>
