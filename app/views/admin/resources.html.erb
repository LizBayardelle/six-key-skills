<header class="text-center mt-5 mb-4">
  <p>
    <%= link_to 'New Resource', new_resource_path %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Resources Page', resources_path %>
  </p>

  <h1 class="font-weight-bold">Resources</h1>
</header>

<section class="text-center mb-5 my-"> <!-- blogs -->
  <div class="container">  <!-- container -->

    <div class="table-responsive" style="width: 100%">
      <table id="dtBasicExample" class="table table-striped table-bordered" width="100%">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Active</th>
            <th>Created By</th>
            <th><i class="fas fa-globe"></i></th>
            <th><i class="fas fa-mountain"></i></th>
            <th><i class="fas fa-brain"></i></th>
            <th><i class="fas fa-first-aid"></i></th>
            <th><i class="fas fa-sitemap"></i></th>
            <th><i class="fas fa-stopwatch"></i></th>
            <th><i class="fas fa-cookie-bite"></i></th>
          </tr>
        </thead>

        <tbody>
          <% @resources.each do |resource| %>
            <tr>
              <td><%= link_to resource.title, resource %></td>
              <td>
                <% if resource.resource_type == "Link" %>
                  <%= link_to "Link", resource.link_url %>
                <% elsif resource.resource_type == "Attachment" %>
                  <%= link_to "Attachment", url_for(resource.document) %>
                <% end %>
                <br><%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_resource_path(resource) %>  <%= link_to '<i class="fas fa-times"></i>'.html_safe, resource, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>

              <td><% if resource.active %><i class="fas fa-check"></i><% end %></td>

              <td><%= resource.user.full_name %></td>

              <td><% if resource.general %><i class="fas fa-check"></i><% end %></td>
              <td><% if resource.motivation %><i class="fas fa-check"></i><% end %></td>
              <td><% if resource.mindset %><i class="fas fa-check"></i><% end %></td>
              <td><% if resource.resourcing %><i class="fas fa-check"></i><% end %></td>
              <td><% if resource.planning %><i class="fas fa-check"></i><% end %></td>
              <td><% if resource.time_management %><i class="fas fa-check"></i><% end %></td>
              <td><% if resource.discipline %><i class="fas fa-check"></i><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- table responsive -->


  </div> <!-- container -->
</section>









<script>
  $(document).ready(function () {
    $('#dtBasicExample').DataTable();
    $('.dataTables_length').addClass('bs-select');
  });
</script>
