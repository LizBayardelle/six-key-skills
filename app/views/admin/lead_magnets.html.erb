<header class="text-center mt-5 mb-4">
  <h1 class="font-weight-bold">Lead Magnets</h1>
  <%= link_to 'New Lead Magnet', new_lead_magnet_path, class: "btn color-slate btn-md text-white text-white-hover" %>
</header>

<section class="text-center mb-5 my-"> <!-- blogs -->
  <div class="container">  <!-- container -->

    <div class="table-responsive" style="width: 100%">
      <table id="dtBasicExample" class="table table-striped table-bordered" width="100%">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Active</th>
            <th>Created By</th>
            <th><i class="fas fa-mountain"></i></th>
            <th><i class="fas fa-brain"></i></th>
            <th><i class="fas fa-first-aid"></i></th>
            <th><i class="fas fa-sitemap"></i></th>
            <th><i class="fas fa-stopwatch"></i></th>
            <th><i class="fas fa-cookie-bite"></i></th>
          </tr>
        </thead>

        <tbody>
          <% @lead_magnets.each do |lead_magnet| %>
            <tr>
              <td><%= link_to lead_magnet.title, lead_magnet %></td>
              <td>
                <% if lead_magnet.lead_magnet_type == "Link" %>
                  <%= link_to "Link", lead_magnet.link_url %>
                <% elsif lead_magnet.lead_magnet_type == "Attachment" %>
                  <%= link_to "Attachment", url_for(lead_magnet.document) %>
                <% end %>
                <br><%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_lead_magnet_path(lead_magnet) %>  <%= link_to '<i class="fas fa-times"></i>'.html_safe, lead_magnet, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>

              <td><% if lead_magnet.active %><i class="fas fa-check"></i><% end %></td>

              <td><%= lead_magnet.user.full_name %></td>

              <td><% if lead_magnet.motivation %><i class="fas fa-check"></i><% end %></td>
              <td><% if lead_magnet.mindset %><i class="fas fa-check"></i><% end %></td>
              <td><% if lead_magnet.resourcing %><i class="fas fa-check"></i><% end %></td>
              <td><% if lead_magnet.planning %><i class="fas fa-check"></i><% end %></td>
              <td><% if lead_magnet.time_management %><i class="fas fa-check"></i><% end %></td>
              <td><% if lead_magnet.discipline %><i class="fas fa-check"></i><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- table responsive -->


  </div> <!-- container -->
</section>









<script>
  $(document).ready(function () {
    $('#dtBasicExample').DataTable();
    $('.dataTables_length').addClass('bs-select');
  });
</script>
