<main class="container-fluid px-5 pb-5">

  <header class="text-right pt-2">
    <%= link_to 'New Quiz', new_quiz_path, class: "btn btn-sm btn-slate" %>
    <%= link_to 'Public Quizzes Page', quizzes_path, class: "btn btn-sm btn-slate" %>
  </header>

  <header class="text-center">
    <h1 class="font-weight-bold">Quiz Manager</h1>
  </header>

  <section class="">
    <% @quizzes.each do |quiz| %>
      <%= link_to quiz.name, quiz_path(quiz) %>
    <% end %>
  </section>

</main>
