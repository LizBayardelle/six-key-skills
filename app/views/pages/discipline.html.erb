<main>

  <div class="view jarallax" style="height: 100vh;">

    <img class="jarallax-img" src="https://sixkeyskills.s3-us-west-1.amazonaws.com/discipline.jpg" alt="">

    <div class="mask rgba-white-slight">
      <div class="container flex-center text-center pb-5">
        <div class="row pb-5">
          <div class="col-md-12 wow fadeIn">
            <h1 class="display-3 mb-2 wow fadeInDown text-black font-weight-bold" data-wow-delay="0.3s">Discipline</h1>
            <h4 class="mb-3 mt-1 font-weight-bold wow fadeIn text-black" data-wow-delay="0.4s">
              All the skills and plans in the world won't help you without the willpower to stick to it when things get hard.
            </h4>
            <h4 class="mb-3 mt-1 font-weight-bold wow fadeIn text-black" data-wow-delay="0.4s">
              Is your discipline (or lack thereof) keeping you from your goals?  Take the quiz to find out.
            </h4>
            <a class="btn color-slate btn-lg wow fadeIn text-white text-white-hover" href="#discipline-skills"  data-wow-delay="0.4s">Read More</a>
            <% if Quiz.where(slug: "Discipline").count != 0 %>
              <%= link_to "Test Your Discipline", quiz_path(Quiz.where(slug: "Discipline").first.id), class: "btn color-red btn-lg wow fadeIn text-white text-white-hover" %>
            <% end %>
          </div> <!-- col -->
        </div> <!-- row -->
      </div> <!-- container -->
    </div> <!-- mask -->

  </div> <!-- jarallax view -->


  <div class="z-depth-3">
    <div class="container pb-4">

      <div class="row" id="discipline-skills">  <!--Grid row-->
        <div class="col-md-12 my-5 text-center"> <!--Grid column-->

          <h2 class="h1 font-weight-bold text-navy pt-4 pb-4">Discipline Skills</h2>

          <% subcategories = Subcategory.where(discipline: true, active: true) %>
          <%= render partial: "pages/subcategories_list", locals: { subcategories: subcategories } %>

        </div> <!--Grid column-->
      </div> <!--Grid row-->

    </div> <!-- container -->
  </div> <!-- z depth -->



  <div class="view jarallax">
    <img class="jarallax-img" src="https://sixkeyskills.s3-us-west-1.amazonaws.com/whatever-it-takes.jpg" alt="">
  </div>



</main>


<script>
  $(document).ready(function() {
    // object-fit polyfill run
    objectFitImages();

    /* init Jarallax */
    jarallax(document.querySelectorAll('.jarallax'));

    jarallax(document.querySelectorAll('.jarallax-keep-img'), {
        keepImg: true,
    });
  });
</script>
